<Window x:Class="ClientsInfoProgram.Views.UserSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientsInfoProgram.Views"
        mc:Ignorable="d"
        Title="Программа просмотра данных клиентов банка" 
		Height="300" Width="500"
		MaxHeight="800" MaxWidth="1000"
		MinHeight="200" MinWidth="400">
	<StackPanel Margin="10">
		<TextBlock Text="Выберите пользователя" Margin="5"/>
		<ComboBox Width="100" HorizontalAlignment="Left" Margin="5" 
				  ItemsSource="{Binding UserTypes}"
				  SelectedItem="{Binding SelectedUserType}">				
		</ComboBox>		
	</StackPanel>
</Window>

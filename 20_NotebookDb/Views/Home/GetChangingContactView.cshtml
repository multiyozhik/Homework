@model Contact
@{
    ViewBag.Title = "Изменение данных контакта";
}
<h4>Уточните данные по контакту:</h4>
<form method="post" action="/Home/Change?id=@Model.Id" class="role">
    <div class="form-group">
        <label for="family-name">Фамилия: </label>
        <input class="form-control" id="family-name" type="text" name="familyName" value="@Model.FamilyName" autofocus required />
    </div>
    <div class="form-group">
        <label for="first-name">Имя:</label>
        <input class="form-control" id="first-name" type="text" name="name" required value="@Model.Name"/>
    </div>
    <div class="form-group">
        <label for="middle-name">Отчество</label>
        <input class="form-control" id="middle-name" type="text" name="middleName" value="@Model.MiddleName"/>
    </div>
    <div class="form-group">
        <label for="phone-number">Телефон: </label>
        <input class="form-control" id="phone-number" type="text" name="phoneNumber" value="@Model.PhoneNumber" required/>
    </div>
    <div class="form-group">
        <label for="address">Адрес:</label>
        <input class="form-control" id="adress" type="text" name="adress" value="@Model.Adress" required />
    </div> 
    <div>
        <button type="submit" class="btn btn-primary">Отправить</button>
    </div>
</form>
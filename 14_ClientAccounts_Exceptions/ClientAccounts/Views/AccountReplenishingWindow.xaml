<Window x:Class="ClientAccounts.Views.AccountReplenishingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientAccounts.Views"
        mc:Ignorable="d"
        Title="Пополнение счета" Height="200" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock Text="Введите сумму, тыс. руб." Margin="5"/>
            <TextBox x:Name="AddingSummaTextbox" Text="{Binding AddingSum, Mode=OneWayToSource}" Margin="5"/>
            <Button Content="Пополнить счет" Click= "Replenish_Button"/>                       
        </StackPanel>
    </Grid>
</Window>

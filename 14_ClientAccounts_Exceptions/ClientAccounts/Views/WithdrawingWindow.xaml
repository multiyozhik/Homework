<Window x:Class="ClientAccounts.Views.WithdrawingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientAccounts.Views"        
        mc:Ignorable="d"
        Title="Частичное снятие средств со счета" Height="200" Width="400">
    <Grid>
        <StackPanel> 
            <TextBlock Text="Введите сумму, тыс. руб.:" Margin="5"/>
            <TextBox x:Name="SubstractingSummaTextbox" Text="{Binding SubstructingSum, Mode=OneWayToSource}" Margin="5"/>
            <Button Content="Снять сумму со счета" Click="WithdrawButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
